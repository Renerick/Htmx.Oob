@page "/test-page"
@model Htmx.Oob.Example.Pages.TestPage

@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">
<head>
    <title>Test page</title>
</head>
<body>
<div>
    <h1>Test page</h1>
    <h2>Testing partials</h2>
    <form hx-get hx-page="TestPage" hx-page-handler="Partial" hx-target="#partial-target">
        <select name="swap">
            <option value="">default</option>
            <option value="none">none</option>
            <option value="delete">delete</option>
            <option value="true">true</option>
            <option value="beforebegin">beforebegin</option>
            <option value="beforeend">beforeend</option>
            <option value="afterbegin">afterbegin</option>
            <option value="afterend">afterend</option>
            <option value="innerHTML">innerHTML</option>
            <option value="outerHTML">outerHTML</option>
        </select>
        <button type="submit">Request with oob partial</button>
    </form>
    <div id="partial-target">
        Target data will be here
    </div>
    <br/>
    <div id="partial-oob">
        Partial will be here
    </div>
    <br/>
    <table style="border: solid black">
        <tr>
            <th>This is a table header and below is a row</th>
        </tr>
        <tr id="partial-oob-table-row">
            <td>Data should be here</td>
        </tr>
    </table>

    <hr>

    <h2>Testing view components</h2>
    <form hx-get hx-page="TestPage" hx-page-handler="ViewComponent" hx-target="#vc-target">
        <select name="swap">
            <option value="">none</option>
            <option value="true">true</option>
            <option value="beforebegin">beforebegin</option>
            <option value="beforeend">beforeend</option>
            <option value="afterbegin">afterbegin</option>
            <option value="afterend">afterend</option>
        </select>
        <button type="submit">Request with oob viewcomponent</button>
    </form>
    <div id="vc-target">
        Target data will be here
    </div>
    <br/>
    <div id="vc-oob">
        Partial will be here
    </div>
    <br/>

    <script src="https://cdn.jsdelivr.net/gh/bigskysoftware/htmx@4af2f75ae172eb5a29fb89cf8dac22d77c9c0eee/src/htmx.js" crossorigin="anonymous" defer></script>
</div>
</body>
</html>